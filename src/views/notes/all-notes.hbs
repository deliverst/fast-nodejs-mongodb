<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-item-center">
                        {{this.title}} <a href="/notes/edit/{{_id}}" class="fas fa-edit"></a>
                    </h4>
                    <p> {{this.description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h2 class="text-center">{{user.name}}</h2>
                <p class="lead">There's notes yets</p>
                <a href="/notes/add" class="btn btn-success btn-block">Crea una nota</a>
            </div>
        </div>
    {{/each}}
</div>